<h1>Sighting number <%= @sighting.id %> For <%= @sighting.species.name %></h1>
<table class="table table-striped table-hover" >
  <thead>
    <tr class="active">
      <th>Latitude</th><th>Longitude</th><th>Date</th><th>Region</th>
  </tr>
</thead>
<tbody>
  <tr class="primary">
<td><%= @sighting.latitude %></td>   <td> <%= @sighting.longitude %></td>    <td><%= @sighting.date %> </td>   <td><%= @sighting.region.name %></td>
</tr>
</tbody>
</table>

<div class="btn-toolbar">
<div class="btn-group">

<a href="/species/<%= @sighting.species.id %>/sightings/<%= @sighting.id %>/edit" class="btn btn-default">Edit</a>
<a href="/species/<%= @sighting.species.id %>/sightings/<%= @sighting.id %>/destroy"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow" class="btn btn-default">Delete</a>


</div>
</div>

